    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4CAF50;
            --secondary-color: #2196F3;
            --dark-color: #333;
            --light-color: #f5f5f5;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
            scroll-behavior: smooth;
            background-color: #fafafa;
        }

        /* Parallax hero section */
        .hero {
            position: relative;
            color: white;
            padding: 180px 0 120px;
            text-align: center;
            overflow: hidden;
            background-color: rgba(0,0,0,0.6);
        }
        
        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(76, 175, 80, 0.8) 0%, rgba(33, 150, 243, 0.8) 100%), url('https://images.unsplash.com/photo-1587574296782-12ab649633a8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1517&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            z-index: -1;
            transform: translateZ(0);
        }

        .hero h1 {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            animation: fadeInUp 1s ease-out;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            animation: fadeInUp 1s ease-out 0.3s;
            animation-fill-mode: both;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .feature-card {
            transition: all 0.5s cubic-bezier(0.25, 1, 0.5, 1);
            height: 100%;
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            position: relative;
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.5s ease;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        .feature-card:hover::before {
            transform: scaleX(1);
        }

        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--primary-color);
            transition: all 0.3s ease;
        }
        
        .feature-card:hover .feature-icon {
            transform: scale(1.2);
            color: var(--secondary-color);
        }

        .subscription-card {
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .subscription-card:hover {
            transform: translateY(-10px);
        }

        .price {
            font-size: 2.5rem;
            color: var(--primary-color);
        }

        .cta-button {
            background: linear-gradient(90deg, var(--primary-color), #45a049);
            border: none;
            padding: 12px 30px;
            border-radius: 30px;
            color: white;
            font-weight: bold;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.3);
            animation: fadeInUp 1s ease-out 0.6s;
            animation-fill-mode: both;
        }

        .cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(76, 175, 80, 0.4);
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, #45a049, var(--primary-color));
            z-index: -1;
            transition: opacity 0.3s ease;
            opacity: 0;
        }

        .cta-button:hover::before {
            opacity: 1;
        }

        .stats-wave-container {
            position: relative;
            height: 100px;
            overflow: hidden;
            margin-top: -50px;
        }
        
        .stats-wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100px;
            background: var(--light-color);
            border-radius: 100% 100% 0 0 / 100px;
            box-shadow: 0 -5px 15px rgba(0,0,0,0.05);
        }
        
        .stats {
            position: relative;
            background-color: var(--light-color);
            padding: 60px 0;
        }

        .stats-card {
            text-align: center;
            padding: 20px;
            border-right: 1px solid #ddd;
        }

        .stats-card:last-child {
            border-right: none;
        }

        .stats-icon {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 15px;
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: bold;
            color: var(--dark-color);
            display: inline-block;
            margin-bottom: 10px;
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            position: relative;
        }

        .stats-label {
            color: #666;
        }

        .testimonial {
            background-color: var(--light-color);
            padding: 40px 0;
        }

        .testimonial-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 25px;
            margin-bottom: 20px;
        }

        .testimonial-quote {
            font-style: italic;
            margin-bottom: 15px;
        }

        .testimonial-author {
            font-weight: bold;
            color: var(--primary-color);
        }

        .faq {
            padding: 40px 0;
        }

        .faq-item {
            margin-bottom: 20px;
        }

        .faq-question {
            color: var(--dark-color);
            font-weight: bold;
            cursor: pointer;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .faq-answer {
            padding: 15px;
            border-left: 3px solid var(--primary-color);
        }

        footer {
            background-color: var(--dark-color);
            color: white;
            padding: 40px 0;
        }

        .footer-section {
            margin-bottom: 30px;
        }

        .footer-title {
            font-size: 1.2rem;
            margin-bottom: 15px;
        }

        .footer-link {
            color: #ccc;
            text-decoration: none;
            display: block;
            margin-bottom: 8px;
        }

        .footer-link:hover {
            color: white;
        }

        .social-links {
            margin-top: 20px;
        }

        .social-link {
            color: white;
            font-size: 1.5rem;
            margin-right: 15px;
            transition: color 0.3s ease;
        }

        .social-link:hover {
            color: var(--primary-color);
        }
        /* Scroll indicator */
        .scroll-indicator {
            position: fixed;
            top: 0;
            left: 0;
            height: 5px;
            width: 0;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            z-index: 1000;
            transition: width 0.1s ease;
        }
        
        /* Floating animations */
        @keyframes float {
            0% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
            100% { transform: translateY(0); }
        }
        
        .svg-container {
            max-width: 100%;
            height: auto;
        }
        
        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }
        
        .airplane {
            animation: airplane-float 8s ease-in-out infinite;
        }
        
        @keyframes airplane-float {
            0% { transform: translate(0, 0); }
            25% { transform: translate(5px, -5px); }
            50% { transform: translate(10px, 0); }
            75% { transform: translate(5px, 5px); }
            100% { transform: translate(0, 0); }
        }
        
        .sensors circle {
            animation: pulse 3s ease-in-out 1; /* Esegue l'animazione una sola volta */
        }
        
        @keyframes pulse {
            0% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.1); opacity: 0.8; }
            100% { transform: scale(1); opacity: 1; }
        }
    </style>
</head>
